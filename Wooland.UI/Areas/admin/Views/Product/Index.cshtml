@model IOrderedQueryable<Product>
<div class="right_col" role="main">
    <div class="">
        

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Ürün Yönetim</h2>
                        <a asp-controller="Product" asp-action="New" class="btn btn-success float-right">Yeni Ürün</a>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    
                                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Ürün Adı</th>
                                                <th>Fiyatı</th>
                                                <th>Stok Miktarı</th>
                                                <th>Ürün Fotoğrafları</th>
                                                <th>Durum</th>
                                                <th></th>
                                            </tr>
                                        </thead>


                                        <tbody>                                           
                                            @foreach (Product s in Model)
                                            {
                                                <tr>
                                                    <td><a asp-controller="Product" asp-action="Edit" asp-route-id="@s.ID">@s.Name</a></td>
                                                    <td>@s.Price</td>
                                                    <td>@s.Stock</td>
                                                    <td>
                                                        <label class="label label-@(s.Status?"primary":"danger")">
                                                            @(s.Status ? "Aktif" : "Pasif")


                                                        </label>
                                                    </td>
                                                    <td><a asp-controller="ProductPicture" asp-action="Index" asp-route-productid="@s.ID">Ürünün Fotoğrafları</a></td>
                                                    <td>

                                                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@s.ID"  class="btn btn-outline-danger" style="color:red">Sil</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
